{
  "comment": "Sonarqube Checks",
  "id": "SonarqubeChecks",
  "name": "Sonarqube Checks",
  "rules": [
    {
      "action": "WARN",
      "comment": "Warn if ports other than 9000 exposed",
      "gate": "dockerfile",
      "id": "7bbc7344-18a8-417d-88cc-1bd9386e395d",
      "params": [
        {
          "name": "ports",
          "value": "9000"
        },
        {
          "name": "type",
          "value": "whitelist"
        }
      ],
      "trigger": "exposed_ports"
    },
    {
      "action": "WARN",
      "comment": "Warn if user other than sonarqube defined",
      "gate": "dockerfile",
      "id": "046c634a-1c66-4f92-8610-259228912297",
      "params": [
        {
          "name": "users",
          "value": "sonarqube"
        },
        {
          "name": "type",
          "value": "whitelist"
        }
      ],
      "trigger": "effective_user"
    }
  ],
  "version": "1_0"
}
