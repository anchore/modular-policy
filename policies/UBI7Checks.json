{
  "comment": "UBI7 Checks",
  "id": "UBI7Checks",
  "name": "UBI7 Checks",
  "rules": [
    {
      "action": "WARN",
      "comment": "Warn if distro not RHEL",
      "gate": "metadata",
      "id": "f343ebed-dff0-4e9a-9c31-5c09cf3c8c0d",
      "params": [
        {
          "name": "attribute",
          "value": "distro"
        },
        {
          "name": "check",
          "value": "="
        },
        {
          "name": "value",
          "value": "RHEL"
        }
      ],
      "trigger": "attribute"
    },
    {
      "action": "WARN",
      "comment": "Warn if DSOP fix script is not run and then removed",
      "gate": "dockerfile",
      "id": "6f41ce67-7f05-4e4d-8e6a-142e06a25bee",
      "params": [
        {
          "name": "instruction",
          "value": "RUN"
        },
        {
          "name": "check",
          "value": "not_exists"
        }
      ],
      "trigger": "instruction"
    }
  ],
  "version": "1_0"
}
