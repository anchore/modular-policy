{
  "comment": "Elasticsearch checks",
  "id": "ElasticsearchChecks",
  "name": "Elasticsearch Checks",
  "rules": [
    {
      "action": "WARN",
      "comment": "Warn if ports other than 9200, 9300 exposed",
      "gate": "dockerfile",
      "id": "a9e986ea-1ac3-4048-b59f-1b442f8da7b8",
      "params": [
        {
          "name": "ports",
          "value": "9200,9300"
        },
        {
          "name": "type",
          "value": "whitelist"
        }
      ],
      "trigger": "exposed_ports"
    },
    {
      "action": "WARN",
      "comment": "Warn if user other than 1000 defined",
      "gate": "dockerfile",
      "id": "6f43a5b3-8859-4cab-91e6-3d4c2cc43c74",
      "params": [
        {
          "name": "users",
          "value": "1000"
        },
        {
          "name": "type",
          "value": "whitelist"
        }
      ],
      "trigger": "effective_user"
    }
  ],
  "version": "1_0"
}
