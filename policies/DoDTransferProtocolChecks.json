{
  "comment": "Anchore DoD Transfer Protocol Checks",
  "id": "DoDTransferProtocolChecks",
  "name": "Transfer Protocol Checks",
  "rules": [
    {
      "action": "WARN",
      "gate": "dockerfile",
      "id": "6a6ba35f-5e78-4757-8fa3-fd8c2fbd1665",
      "params": [
        {
          "name": "instruction",
          "value": "FROM"
        },
        {
          "name": "check",
          "value": "like"
        },
        {
          "name": "value",
          "value": "(?i)(\\.*(sftp://|http://|https://|ftp://)\\.*)"
        }
      ],
      "trigger": "instruction"
    },
