{
  "comment": "Prometheus Checks",
  "id": "PrometheusChecks",
  "name": "Prometheus Checks",
  "rules": [
    {
      "action": "WARN",
      "comment": "Warn if ports other than 9090 exposed",
      "gate": "dockerfile",
      "id": "6fc9babf-7bae-4806-a26c-3fbbd564f3de",
      "params": [
        {
          "name": "ports",
          "value": "9090"
        },
        {
          "name": "type",
          "value": "whitelist"
        }
      ],
      "trigger": "exposed_ports"
    },
    {
      "action": "WARN",
      "comment": "Warn if user other than nobody defined",
      "gate": "dockerfile",
      "id": "9bbcd5cf-c914-43c1-bbcb-4ae1df8b4ff2",
      "params": [
        {
          "name": "users",
          "value": "nobody"
        },
        {
          "name": "type",
          "value": "whitelist"
        }
      ],
      "trigger": "effective_user"
    }
  ],
  "version": "1_0"
}
