{
  "comment": "Redis Checks",
  "id": "RedisChecks",
  "name": "Redis Checks",
  "rules": [
    {
      "action": "WARN",
      "comment": "Warn if redis user 997 not defined",
      "gate": "dockerfile",
      "id": "be456d9f-7202-4d4f-8749-4551203c78f9",
      "params": [
        {
          "name": "users",
          "value": "997"
        },
        {
          "name": "type",
          "value": "whitelist"
        }
      ],
      "trigger": "effective_user"
    },
    {
      "action": "WARN",
      "comment": "Warn if exposed ports other than 6379",
      "gate": "dockerfile",
      "id": "1a11f9e2-a4af-45ff-ab55-23ac4ac2d5d4",
      "params": [
        {
          "name": "ports",
          "value": "6379"
        },
        {
          "name": "type",
          "value": "whitelist"
        }
      ],
      "trigger": "exposed_ports"
    }
  ],
  "version": "1_0"
}
