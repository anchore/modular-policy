{
  "comment": "Fluentd Checks",
  "id": "FluentdChecks",
  "name": "Fluentd Checks",
  "rules": [
    {
      "action": "WARN",
      "comment": "Warn if ports other than 24224 and 5140 exposed",
      "gate": "dockerfile",
      "id": "a1502c8f-6b09-46a0-8828-e9ef0923e9cf",
      "params": [
        {
          "name": "ports",
          "value": "24224,5140"
        },
        {
          "name": "type",
          "value": "whitelist"
        }
      ],
      "trigger": "exposed_ports"
    },
    {
      "action": "WARN",
      "comment": "Warn if user other than fluent defined",
      "gate": "dockerfile",
      "id": "68b9457e-7a6a-4f69-9d0e-a83decb656ca",
      "params": [
        {
          "name": "users",
          "value": "fluent"
        },
        {
          "name": "type",
          "value": "whitelist"
        }
      ],
      "trigger": "effective_user"
    }
  ],
  "version": "1_0"
}
